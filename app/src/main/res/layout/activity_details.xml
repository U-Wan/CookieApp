<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.uwan.cookie.activityes.DetailsActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cookie Details"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewlogo"
        android:layout_width="264dp"
                android:layout_gravity="center"
                android:layout_height="169dp"
        app:srcCompat="@drawable/cookie" />
    <ImageView
        android:id="@+id/detail_img_fav"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"

        app:srcCompat="@drawable/outline_favourite_black_20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
android:layout_marginStart="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_flavour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flavour"

            android:textAlignment="textEnd"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_flavour_txt_details"
            android:layout_width="200dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginStart="70dp"        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiration date"
            android:textStyle="bold"
           />
        <TextView
            android:id="@+id/txt_exp_txt_details"
            android:layout_width="200dp"

            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="14sp"
           />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_marginStart="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_brand_txt_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:textAlignment="center"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight (gr)"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_weght_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="25dp"
            android:textAlignment="center"
           />


    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cookie name"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_cookie_name_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="something"
            android:gravity="center"
            android:layout_marginStart="15dp"

            android:textSize="14sp"/>

    </LinearLayout>



</LinearLayout>